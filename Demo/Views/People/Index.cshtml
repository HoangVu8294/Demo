@model List<Demo.Models.Domain.Person>

@{
}

<h1>People</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.Name</td>
                <td>@person.Email</td>
                <td><a href="People/View/@person.Id">View</a></td>
            </tr>
        }
    </tbody>
</table>
